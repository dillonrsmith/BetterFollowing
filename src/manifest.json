{
    "name": "Better Mastodon Following",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "identity"
    ],
    "host_permissions": ["https://*/*"],
    "action": {
        "default_title": ""
    }
}